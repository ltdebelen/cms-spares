<h3 class="page-header">
    <i class="fa fa-users"></i> Customers</h3>

<div class="col-lg-12" style="margin-bottom:20px">
    <div class="pull-right">
        <a class="btn btn-success" onclick="addCustomer()">
            <i class="fa fa-plus">
            </i> Add New
        </a>
        <a href="/data_maintenance/customers" class="btn btn-default" role="button">
            <i class="fa fa-refresh">
            </i> Refresh List
        </a>
    </div>
</div>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <i class="fa fa-th-list"></i> Customer List
        </div>

        <div class="panel-body">
            <table class="table table-striped table-bordered table-hover" id="tblCustomers" style="width: 100%;">
                <thead>
                    <tr>
                        <th>Customer Name</th>
                        <th>Address</th>
                        <th width="15%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each customerList}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.address}}</td>
                        <td align="center">
                            <a class="btn btn-warning" title="Update Customer" onclick="updateCustomer({{this.id}})">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a class="btn btn-danger" title="Delete Customer" onclick="deleteCustomer({{this.id}})">
                                <i class="fa fa-times"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{!-- ADD OR UPDATE CUSTOMER MODAL --}}
<div id="customerModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="modalTitle">
                    <i class="fa fa-user"></i> Customer Information</h4>
            </div>
            <form id="customerForm">
                <div class="modal-body">

                    <input type="hidden" name="customer_id" id="customer_id">

                    <div class="form-group">
                        <label>Customer Name: </label>
                        <textarea name="customer_name" id="customer_name" class="form-control" rows="2" style="resize:none;" required></textarea>
                    </div>

                    <div class="form-group">
                        <label>Customer Address: </label>
                        <textarea name="customer_address" id="customer_address" class="form-control" rows="4" style="resize:none;"></textarea>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="submit" name="submit" value="Submit" id="btn_modal" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>

{{!-- DELETE CUSTOMER MODAL --}}
<div id="deleteCustomerModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="modalTitle">
                    <i class="fa fa-exclamation-circle"></i> Delete Confirmation</h4>
            </div>
            <form id="deleteCustomerForm">
                <div class="modal-body">
                    <input type="hidden" name="customer_id" id="del_customer_id">
                    <p>Are you sure you want to delete this Customer?</p>
                </div>
                <div class="modal-footer">
                    <input type="submit" name="submit" value="Yes" id="submit_delete" class="btn btn-danger" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>