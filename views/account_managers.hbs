<h3 class="page-header">
    <i class="fa fa-child"></i> Account Managers</h3>

<div class="col-lg-12" style="margin-bottom:20px">
    <div class="pull-right">
        <a class="btn btn-success" onclick="addAM()">
            <i class="fa fa-plus">
            </i> Add New
        </a>
        <a href="/data_maintenance/account_managers" class="btn btn-default" role="button">
            <i class="fa fa-refresh">
            </i> Refresh List
        </a>
    </div>
</div>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <i class="fa fa-th-list"></i> Account Managers List
        </div>

        <div class="panel-body">
            <table class="table table-striped table-bordered table-hover" id="tblCustomers" style="width: 100%;">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Group</th>
                        <th width="15%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each amList}}
                    <tr>
                        <td>{{this.first_name}}</td>
                        <td>{{this.last_name}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.group_name}}</td>
                        <td align="center">
                            <a class="btn btn-warning" title="Update Customer" onclick="updateAM({{this.id}})">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a class="btn btn-danger" title="Delete Customer" onclick="deleteAM({{this.id}})">
                                <i class="fa fa-times"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{!-- ADD OR UPDATE AM --}}
<div id="amModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="modalTitle">
                    <i class="fa fa-user"></i> AM Information</h4>
            </div>
            <form id="amForm">
                <div class="modal-body">

                    <input type="hidden" id="am_id" name="am_id">

                    <div class="form-group">
                        <label>First Name: </label>
                        <input type="text" id="first_name" name="first_name" class="form-control">
                    </div>

                    <div class="form-group">
                        <label>Last Name: </label>
                        <input type="text" id="last_name" name="last_name" class="form-control">
                    </div>

                    <div class="form-group">
                        <label>Email: </label>
                        <input type="text" id="am_email" name="am_email" class="form-control">
                    </div>

                    <div class="form-group">
                        <label>Business Group: </label>
                        <select class="form-control" id="business_group" name="business_group_id" required>
                            <option disabled selected value> -- Choose Option --</option>
                            {{#each bgList}}
                            <option value="{{this.id}}">{{this.group_name}}</option>
                            {{/each}}
                        </select>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="submit" name="submit" value="Submit" id="btn_modal" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>

{{!-- DELETE AM MODAL --}}
<div id="deleteAMModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="modalTitle">
                    <i class="fa fa-exclamation-circle"></i> Delete Confirmation</h4>
            </div>
            <form id="deleteAMForm">
                <div class="modal-body">
                    <input type="hidden" id="hiddenAMId" name="hidden_am_id">
                    <p>Are you sure you want to delete this Account Manager?</p>
                </div>
                <div class="modal-footer">
                    <input type="submit" name="submit" value="Yes" id="submit_delete" class="btn btn-danger" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>